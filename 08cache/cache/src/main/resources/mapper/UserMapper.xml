<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="galaxy.javacourse.cache.mapper.UserMapper">

    <!-- 开启mybatis cache: 使用ehcache -->
<!--    <cache type="org.mybatis.caches.ehcache.EhcacheCache">
        <property name="memoryStoreEvictionPolicy" value="LRU"/>
    </cache>-->

    <resultMap id="BaseResultMap" type="galaxy.javacourse.cache.entity.User">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="age" jdbcType="INTEGER" property="age" />
    </resultMap>
    
    <select id="findOne" parameterType="int" resultType="galaxy.javacourse.cache.entity.User">
        select * from user where id = #{id}
    </select>
    
    <select id="findAll" resultType="galaxy.javacourse.cache.entity.User" >
        select * from user
    </select>

</mapper>